@model IEnumerable<QuanLyChuyenBay.Models.Customer>

@{
    ViewBag.Title = "Information Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Info Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  maKH=item.MaKH  }) |
            @Html.ActionLink("Details", "Details", new { maKH=item.MaKH }) |
            @Html.ActionLink("Delete", "Delete", new {  maKH=item.MaKH  })
        </td>
    </tr>
}

</table>
